
(require "japanese.scm")
(define ja-rk-rule-basic (append '(
;; フォーマットは以下のとおり。
;;(((<キー>+) . ()) (<ひらがな> <カタカナ> <半角カタカナ>))
;;または(((<キー>+) . ()) ((<ひらがな> <カタカナ> <半角カタカナ>)+))

;; 「、」を「，」、「。」を「．」とする
;    (((",") . ()) ("，" "，" ","))
;    (((".") . ()) ("．" "．" "."))
;; 「z SPC」で全角スペースを入力(uim-skkのみ有効)
    ((("z" " ") . ()) ("　" "　" " "))
;; 「z -」で波ダッシュ(windowsで変になる)ではなく全角チルダを入力(uim-skkのみ有効)
;;  チルダで波ダッシュは入力できる
;;  U+301C WAVE DASH 〜
;;  U+FF5E FULLWIDTH TILDE ~
    ;;((("z" "-") . ()) ("~" "~" "~"))
;; dvorak向け
    ;; k -> c
    ((("c" "a") . ()) ("か" "カ" "ｶ"))
    ((("c" "i") . ()) ("き" "キ" "ｷ"))
    ((("c" "u") . ()) ("く" "ク" "ｸ"))
    ((("c" "e") . ()) ("け" "ケ" "ｹ"))
    ((("c" "o") . ()) ("こ" "コ" "ｺ"))
    ;; ky -> cg
    ;; 辞書の送り仮名の設定(cをkと見做す)が必要。
    ((("c" "g" "a") . ()) (("き" "キ" "ｷ") ("ゃ" "ャ" "ｬ")))
    ((("c" "g" "i") . ()) (("き" "キ" "ｷ") ("ぃ" "ィ" "ｨ")))
    ((("c" "g" "u") . ()) (("き" "キ" "ｷ") ("ゅ" "ュ" "ｭ")))
    ((("c" "g" "e") . ()) (("き" "キ" "ｷ") ("ぇ" "ェ" "ｪ")))
    ((("c" "g" "o") . ()) (("き" "キ" "ｷ") ("ょ" "ョ" "ｮ")))
    ;; ky -> kh
    ;; 辞書の送り仮名の設定がうまくいかなくてもいいように。
    ((("k" "h" "a") . ()) (("き" "キ" "ｷ") ("ゃ" "ャ" "ｬ")))
    ((("k" "h" "i") . ()) (("き" "キ" "ｷ") ("ぃ" "ィ" "ｨ")))
    ((("k" "h" "u") . ()) (("き" "キ" "ｷ") ("ゅ" "ュ" "ｭ")))
    ((("k" "h" "e") . ()) (("き" "キ" "ｷ") ("ぇ" "ェ" "ｪ")))
    ((("k" "h" "o") . ()) (("き" "キ" "ｷ") ("ょ" "ョ" "ｮ")))
    ;; py -> ph
    ((("p" "h" "a") . ()) (("ぴ" "ピ" "ﾋﾟ") ("ゃ" "ャ" "ｬ")))
    ((("p" "h" "i") . ()) (("ぴ" "ピ" "ﾋﾟ") ("ぃ" "ィ" "ｨ")))
    ((("p" "h" "u") . ()) (("ぴ" "ピ" "ﾋﾟ") ("ゅ" "ュ" "ｭ")))
    ((("p" "h" "e") . ()) (("ぴ" "ピ" "ﾋﾟ") ("ぇ" "ェ" "ｪ")))
    ((("p" "h" "o") . ()) (("ぴ" "ピ" "ﾋﾟ") ("ょ" "ョ" "ｮ")))
    ;; my -> mn
    ((("m" "n" "a") . ()) (("み" "ミ" "ﾐ") ("ゃ" "ャ" "ｬ")))
    ((("m" "n" "i") . ()) (("み" "ミ" "ﾐ") ("ぃ" "ィ" "ｨ")))
    ((("m" "n" "u") . ()) (("み" "ミ" "ﾐ") ("ゅ" "ュ" "ｭ")))
    ((("m" "n" "e") . ()) (("み" "ミ" "ﾐ") ("ぇ" "ェ" "ｪ")))
    ((("m" "n" "o") . ()) (("み" "ミ" "ﾐ") ("ょ" "ョ" "ｮ")))
    ;; zy -> zm
    ((("z" "m" "a") . ()) (("じ" "ジ" "ｼﾞ") ("ゃ" "ャ" "ｬ")))
    ((("z" "m" "i") . ()) (("じ" "ジ" "ｼﾞ") ("ぃ" "ィ" "ｨ")))
    ((("z" "m" "u") . ()) (("じ" "ジ" "ｼﾞ") ("ゅ" "ュ" "ｭ")))
    ((("z" "m" "e") . ()) (("じ" "ジ" "ｼﾞ") ("ぇ" "ェ" "ｪ")))
    ((("z" "m" "o") . ()) (("じ" "ジ" "ｼﾞ") ("ょ" "ョ" "ｮ")))
    ;; dh -> dn
    ((("d" "n" "a") . ()) (("で" "デ" "ﾃﾞ") ("ゃ" "ャ" "ｬ")))
    ((("d" "n" "i") . ()) (("で" "デ" "ﾃﾞ") ("ぃ" "ィ" "ｨ")))
    ((("d" "n" "u") . ()) (("で" "デ" "ﾃﾞ") ("ゅ" "ュ" "ｭ")))
    ((("d" "n" "e") . ()) (("で" "デ" "ﾃﾞ") ("ぇ" "ェ" "ｪ")))
    ((("d" "n" "o") . ()) (("で" "デ" "ﾃﾞ") ("ょ" "ョ" "ｮ")))
    ;; gy -> gr
    ((("g" "r" "a") . ()) (("ぎ" "ギ" "ｷﾞ") ("ゃ" "ャ" "ｬ")))
    ((("g" "r" "i") . ()) (("ぎ" "ギ" "ｷﾞ") ("ぃ" "ィ" "ｨ")))
    ((("g" "r" "u") . ()) (("ぎ" "ギ" "ｷﾞ") ("ゅ" "ュ" "ｭ")))
    ((("g" "r" "e") . ()) (("ぎ" "ギ" "ｷﾞ") ("ぇ" "ェ" "ｪ")))
    ((("g" "r" "o") . ()) (("ぎ" "ギ" "ｷﾞ") ("ょ" "ョ" "ｮ")))
    ;; ny -> nh
    ((("n" "h" "a") . ()) (("に" "ニ" "ﾆ") ("ゃ" "ャ" "ｬ")))
    ((("n" "h" "i") . ()) (("に" "ニ" "ﾆ") ("ぃ" "ィ" "ｨ")))
    ((("n" "h" "u") . ()) (("に" "ニ" "ﾆ") ("ゅ" "ュ" "ｭ")))
    ((("n" "h" "e") . ()) (("に" "ニ" "ﾆ") ("ぇ" "ェ" "ｪ")))
    ((("n" "h" "o") . ()) (("に" "ニ" "ﾆ") ("ょ" "ョ" "ｮ")))
    ) ja-rk-rule-basic))

